<div class="login-wrapper d-flex align-items-center justify-content-center">
  <div class="login-card p-4 shadow-lg rounded-4">
    <h2 class="text-center mb-4 text-white">Login</h2>
    <form method="POST" action="/login" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label text-white">Username</label>
        <input type="text" name="username" id="username" class="form-control custom-input" placeholder="Enter your username" required />
      </div>
      <div class="mb-4">
        <label for="password" class="form-label text-white">Password</label>
        <input type="password" name="password" id="password" class="form-control custom-input" placeholder="Enter your password" required />
      </div>
      <button type="submit" class="btn btn-danger w-100">Login</button>
    </form>
    <p class="text-white text-center mt-3">
      Don't have an account? <a href="/signup" class="text-info">Sign up</a>
    </p>
  </div>
</div>

<style>
  body, html {
    height: 100%;
    margin: 0;
    background-color: whitesmoke;
    overflow: hidden;
    font-family: "Segoe UI", sans-serif;
  }

  .login-wrapper {
    height: 100vh;
    padding: 20px;
    background-color: whitesmoke;
  }

  .login-card {
    max-width: 400px;
    width: 100%;
    background-color: #2d2544;
  }

  .custom-input {
    background-color: #1b1628;
    color: white;
    border: 1px solid #4a4166;
  }

  .custom-input::placeholder {
    color: #c2c2c2;
    opacity: 0.7;
  }

  .custom-input:focus {
    border-color: #dc3545;
    box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  .btn-danger:hover {
    background-color: #c82333;
    border-color: #bd2130;
  }

  a.text-info:hover {
    text-decoration: underline;
  }
</style>


